#include <iostream>
using namespace std;

int main ()
{
int i=1;
int angka;
int jumlah;
int n=1;

	cout<< "Masukkan Angka		: "<<endl;
	cin>>angka;

	cout<< "Masukkan Pangkat	: "<<endl;
	cin>>n;
	
	jumlah = 1;
	
while (i<=n)
{

	jumlah = jumlah * angka;
	i++;
}

	cout<<" Jumlah				: "<< jumlah<<endl;

system ("pause");
}
